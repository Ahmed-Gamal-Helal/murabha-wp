footer 
    background-color maincolor
    .osool
        img 
            height 110px
        p
            font 16px beIN Normal 
            color #aec2d8
            width 70%
            line-height 2.25
            margin-top 1.5em
    .map-part
        padding 3em 0
        .list-unstyled
            margin-top 1em
            li
                width 49%
                display inline-block
                line-height 45px
                position relative
                a
                    font 16px beIN Normal
                    color #96abc2
                    transition .3s all ease-in-out
                    &:hover
                        color white
    .footer-form
        h5
            color white
            font 18px beIN Normal 
            margin 1em 0 0
        .form-group
            position relative
            input 
                height 36px
                padding 8px
                width 100%
                border-radius 4px
                outline none 
                border none 
                font-family beIN Normal
                &::placeholder
                    color #aec2d8
            button 
                position absolute
                left 0
                top 0
                border none 
                outline none
                background-color white
                height 36px
                color #aec2d8
                padding 0 8px
                i 
                    font-size: 24px
    .rights-reserved
        @media (max-width 767px)
            text-align center
        .container
            padding-top 1em
            padding-bottom 1em
            border-top 1px solid #aec2d8                
        p
            margin 0
            font 16px beIN Normal
            color #aec2d8
            line-height 50px
            @media (max-width 500px)
                font-size 14px
            a
                font 16px beIN
                color #aec2d8
                margin-right 3px
                transition .3s all ease-in-out
                &:hover
                    color white
        .left
            text-align left
            @media (max-width 767px)
                text-align center !important
            ul
                display inline-block
                a
                    color #aec2d8
                    margin-left .5em
                    line-height 40px
                    i 
                        font-size 20px
footer .first-navbar .container
    border-bottom none
.hvr-underline-reveal
    width 100%
.details
    ul
        li
            display block
            color #96abc2
            font: 16px beIN Normal
            line-height 2.75
            margin-right 2em
            &:before
                display inline-block
                font-family Flaticon
                right 1em
                position absolute
            a
                color #96abc2
        li.located
            &:before
                content "\f108"
        li.numbers
            &:before
                content "\f109"
        li.mails
            &:before
                content "\f10a"
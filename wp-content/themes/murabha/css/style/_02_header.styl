#wrapper {
  padding-left: 0;
  -webkit-transition: all 0.5s ease;
  -moz-transition: all 0.5s ease;
  -o-transition: all 0.5s ease;
  transition: all 0.5s ease;
}

#wrapper.toggled {
  padding-left: 250px;
}

#sidebar-wrapper {
  z-index: 1000;
  position: fixed;
  right: 0;
  width: 0;
  height: 100%;
  margin-left: -250px;
  overflow-y: auto;
  background: #fff;
  text-align center
  -webkit-transition: all 0.5s ease;
  -moz-transition: all 0.5s ease;
  -o-transition: all 0.5s ease;
  transition: all 0.5s ease;
}

#wrapper.toggled #sidebar-wrapper {
  width: 360px;
}

#page-content-wrapper {
  width: 100%;
  position: absolute;
  margin-top 25px
}

#wrapper.toggled #page-content-wrapper {
  position: absolute;
  margin-right: -250px;
}
a#menu-toggle
    outline none
    // line-height 57px
    z-index 999
    &:focus
        box-shadow none
    i.flaticon-menu
        color: #cad9e9;

/* Sidebar Styles */

.sidebar-nav 
  margin-top 4em
  padding 0
  list-style none
  border-bottom 1px solid #b8c6d5
  padding-bottom 1.5em

.sidebar-nav li {
  text-indent: 20px;
  line-height: 40px;
}

.sidebar-nav li a 
    display block
    text-decoration none
    color #b8c6d5
    font 18px beIN Normal
    line-height 2.5
    transition .2s all ease-in-out
    &:hover
        text-decoration none
        color maincolor
        background rgba(255, 255, 255, 0.2)

.sidebar-nav li a:active, .sidebar-nav li a:focus {
  text-decoration: none;
}

.sidebar-nav>.sidebar-brand {
  height: 65px;
  font-size: 18px;
  line-height: 60px;
}

.sidebar-nav>.sidebar-brand a {
  color: #999999;
}

.sidebar-nav>.sidebar-brand a:hover {
  color: #fff;
  background: none;
}

@media(min-width:768px) {
  #wrapper {
    padding-left: 0;
  }
  #wrapper.toggled {
    padding-left: 250px;
  }
  #sidebar-wrapper {
    width: 0;
  }
  #wrapper.toggled #sidebar-wrapper {
    width: 360px;
  }
  #page-content-wrapper {
    position: relative;
  }
  #wrapper.toggled #page-content-wrapper {
    position: relative;
    margin-right: 0;
  }
}
@media(max-width:768px)
    #wrapper.toggled #sidebar-wrapper 
        width 250px

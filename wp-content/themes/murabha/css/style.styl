@import 'style/*'

.main-haeder
    padding 10px 0px
    @media screen and (max-width: 991px)
        display none
   .logo-img
       text-align center 
       > img 
            width 183px
            height 123px
    .list
        margin-top 40px
        >li 
            padding: 0 12px
            position relative 
            @media screen and (max-width: 1440px)
                padding 0
            &::before
                content ""
                position absolute
                width 30%
                height 2px
                background-color maincolor
                visibility hidden
                bottom 0
                left 32%
                transition  100ms 
            &:hover:before,&:focus:before, &.active:before
                visibility visible
                -webkit-transform scaleX(1)
                transform scaleX(1)
            > a
              font-family itcbd  
        .left-links
            padding 5px 15px
            > a 
               color maincolor
               &:hover
                  text-decoration none 
            .cart
                margin-left 30px
                > i 
                    transform: rotateY(180deg);
                    padding 5px
.solid-menu
    h3
        // width 80%
        font 30px beIN
        color secondcolor
        border-right 2px solid
        padding-right 1em 
    ul.right-one
        li
            @media screen and (max-width: 576px)
                display: inline-block;
                border: 1px solid #aec2d8;
                padding: .2em .5em;
                margin: .5em;
            a
                color #aec2d8
                font 16px beIN Normal
                transition .3s all ease-in-out
                &:hover
                    color secondcolor
    .about-us
        img 
            -webkit-box-shadow: rgba(37,97,170,0.271) 4px 4px 9px 0px;
            -moz-box-shadow: rgba(37,97,170,0.271) 4px 4px 9px 0px;
            box-shadow: rgba(37,97,170,0.271) 4px 4px 9px 0px;
        p
            font 16px beIN Normal 
            color secondcolor
            border 1px solid #aec2d8
            padding 1.5em 1em
            margin-top 2em
            border-radius 4px
.main-carousle-details   
    position relative   
    .item 
        img 
            padding: 0  
    .owl-carousel
        z-index 0   
    .owl-theme
        .owl-dots
            left auto !important
            top 25%
            right 10% !important
            @media(max-width: 1440px)
                right 0 !important
            .owl-dot
                display block
                color #3c4f5c
                border-left 2px solid
                padding 2em 
            .owl-dot.active
                color #7ebfff   
                border-left 4px solid
    .owl-carousel
        .item
            height 600px
            position relative
            background-color: black;
            @media(max-width: 767px)
                height 400px
            img
                width 100%
                height 100%
                opacity .7
            .camera-type
                position absolute
                right 28%
                top 40%
                @media screen and (max-width: 1440px)
                    right 15%
                    left 40%
                @media screen and (max-width: 991px)
                    left 20%
                    h2 
                        font-size 24px
                h2 
                    color secondcolor
                    font-family beIN Normal
                    font-size 36px
                    text-align center
                    background-color white
                    width 235px
                    span 
                        padding 9px 24px
                    @media screen and (max-width: 991px)
                        font-size 28px
                p 
                    color white
                    font-size 32px
                    font-family beIN Normal
                    line-height 2
                    margin-top 25px
                    min-height 96px
                    -webkit-line-clamp 3
                    margin-right 1em
                    -webkit-box-orient vertical
                    overflow hidden
                    text-overflow ellipsis
                    display -webkit-box
                    @media screen and (max-width: 769px)
                        font-size 22px
                a
                    color white
                    font 16px Coco-Bd
        .owl-nav
            position absolute
            left 0
            right 0
            bottom 50%
            .owl-prev
                position relative
                background-color transparent
                float right 
                &:hover
                        background-color transparent
                &:before
                    position absolute
                    content "\f105"
                    font-family Flaticon
                    font-weight 600
                    top 0
                    bottom 0
                    right 2em
                    font-size 21px
                    color white
                    background-color maincolor
                    height 47px
                    padding 10px
                    border-radius 4px
            .owl-next
                position relative
                background-color transparent
                float left 
                &:hover
                    background-color transparent
                &:before
                    position absolute
                    content "\f106"
                    font-family Flaticon
                    font-weight 600
                    top 0
                    bottom 0
                    left 2em
                    font-size 21px
                    color white
                    background-color maincolor
                    height 47px
                    padding 10px
                    border-radius 4px
        .owl-dots
            position absolute
            right 0
            left 0
            bottom 2.5em
            @media screen and (max-width: 600px)
                display none
            .owl-dot
                span
                    height 5px
                    width 5px
            .owl-dot.active
                span
                    width 30px
                    height 5px
                    background white
.welcome-board
    padding 20px 0
    position relative
    padding 8em 0
    .border-show
        border 1px solid #96abc263
        border-radius 4px
    .first-welcome
        img
            position absolute
            top -70px
            right 45px
            -webkit-box-shadow #2561aa45 4px 4px 9px 0px
            -moz-box-shadow #2561aa45 4px 4px 9px 0px
            box-shadow #2561aa45 4px 4px 9px 0px
            @media screen and (max-width: 769px)
                position relative
                top -30px
                right 0px
                left 0
        img.consult
            top 50px
            left 45px
            right auto
            @media screen and (max-width: 769px)
                position relative
                top 30px
                bottom 15px
                right 0px
                left 0

    .second-welcome
        padding 1.5em 7em 6em 1.5em
        width 90%
        @media screen and (max-width: 769px)
            padding: 1.5em 1.5em 2.5em 1.5em;
            width: 100%;
        h2
            font 36px beIN Normal
            margin-top .5em
            color secondcolor
        p
            font 18px beIN Normal
            -webkit-line-clamp 3
            -webkit-box-orient vertical
            overflow hidden
            text-overflow ellipsis
            display -webkit-box
            line-height 2
            // display inline-block
            margin-bottom 0
            color #96abc2
        a
            font 16px beIn Normal
            margin-right 1em
            color #96abc2
            float left
.for-you
    background-color maincolor
    padding-bottom 4em;
    .item
        margin-left 24px
    h3.for-title
        font 32px beIN Normal
        color white
        padding 1.5em 0
    .repeated-item
        .featured-one
            text-align: center;
            height: 120px;
            width: 120px;
            margin: auto;
            img
                height: 100%;
                width: 100%;
                border-radius: 50%;

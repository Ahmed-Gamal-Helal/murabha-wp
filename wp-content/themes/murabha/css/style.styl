.contact-now
    width 100%
    position relative
    &:before
        content ''
        position absolute
        top 0
        right 0
        bottom 0
        left 0
        background-color #3b6ead
        opacity .9
    input, textarea
        font-family Coco-Lt
        padding-right 1em
        width 100%
        border-radius 4px
        background-color transparent
        border 1px solid #FFF
        color white
        &::placeholder
            color white
    input 
        height 3.5em
    textarea
        padding-top .5em
    button.send-now
        width 150px
        height 3em
        border-radius 4px
        border none
        font 18px Coco-Lt
        margin 2em 0 3em
        cursor pointer
.our-clients
    background-color #cad9e9
    padding 2em 0 3.5em
    .hands-up
        h2
            font 32px beIN
            color secondcolor
    .owl-carousel
        .item
            text-align center
            cursor pointer
            transition .4s all ease-in-out
            img 
                // width auto
                padding 12px 0
                margin auto
                height 87px
                opacity .6
                transition .2s all ease-in-out
                &:hover
                    opacity 1
a.more
    transition .3s all ease-in-out
    &:hover
        color maincolor
a.more-two
    transition .3s all ease-in-out
    &:hover
        color white !important
img.grow
    transition .3s all ease-in-out
    &:hover
        transform scale(1.05)
.single-news
    margin-top 0
    padding-top 4.5em
    background-color transparent
.products
    img 
        display block
        width 100%
        padding 1em 0
        height 315px
.commom-news
    .img-right
        img 
            width 100%
    .words-left
        p
            font 16px Coco-Lt
            line-height 2
        ul
            margin-bottom 2em
            @media (max-width 991px)
                margin-top 1em
            li
                display inline-block
                a
                    i 
                        color white
                        height 40px
                        width 40px
                        font-size 13px
                        padding 4px 6px
                        border-radius 4px
                span
                    font 15px Coco-Lt
                    margin-right 1em
.connect-us
    background-image none
    margin-top 5em
    &:before
        content none
.circles
    ul.location-map, ul.call
        margin-right 3em
        li
            span
                font 16px Coco-Bd
        &:before
            font-family Flaticon
            right .5em
            position absolute
            border 1px dashed #2561aad6
            border-radius 50%
            height 40px
            width 40px
            text-align center
            line-height 40px
            color #001023
            margin-top 6px
    ul.location-map
        margin-bottom 3em
        &:before
